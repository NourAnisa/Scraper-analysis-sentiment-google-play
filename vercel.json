{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python-3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "build": {
    "env": {
      "PIP_NO_CACHE_DIR": "off",
      "PIP_DISABLE_PIP_VERSION_CHECK": "on",
      "PYTHONUNBUFFERED": "1",
      "PYTHONWARNINGS": "ignore"
    },
    "hooks": {
      "build": "pip install --upgrade pip && pip install -r requirements.txt"
    }
  }
}
